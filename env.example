# KF Searcher Environment Configuration
# Copy this file to .env and fill in your values

# Telegram Configuration (Required)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_default_chat_id_here
TELEGRAM_THREAD_ID=your_thread_id_here

# Database Configuration (Auto-configured on Railway)
# DATABASE_URL=postgresql://user:password@host:port/database

# Proxy Configuration (Optional but recommended)
PROXY_ENABLED=true
PROXY_LIST=proxy1:port,proxy2:port,proxy3:port

# Search Configuration
SEARCH_INTERVAL=300
MAX_ITEMS_PER_SEARCH=50
REQUEST_DELAY_MIN=1.0
REQUEST_DELAY_MAX=3.0

# Railway Configuration (For auto-redeploy)
RAILWAY_TOKEN=your_railway_token_here
RAILWAY_PROJECT_ID=your_project_id_here
RAILWAY_SERVICE_ID=your_service_id_here

# Auto-redeploy Configuration
MAX_ERRORS_BEFORE_REDEPLOY=5

# Application Configuration
SECRET_KEY=your_secret_key_here
LOG_LEVEL=INFO
DEBUG=false

# Web UI Configuration
PORT=5000
WEB_UI_HOST=0.0.0.0
